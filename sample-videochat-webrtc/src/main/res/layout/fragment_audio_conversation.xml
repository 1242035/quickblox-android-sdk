<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id = "@+id/fragmentIncomeCall"
    style="@style/MatchParent"
    >

    <LinearLayout
        android:id="@+id/info_about_call"
        style="@style/MatchWidth"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/action_bar_height"
        >

        <ImageView
            android:id="@+id/caller_avatar"
            style="@style/CallerAvatar"
            />

        <TextView
            android:id="@+id/caller_name"
            style="@style/WrapContent"
            android:textColor="@color/caller_name_text_color"
            android:textSize="@dimen/caller_name_text_size"
            android:text="User Name"
            android:maxLines="1"
            android:maxLength="25"
            android:paddingTop="20dp"
            />

        <Chronometer
            android:id="@+id/timer_chronometer_audio_call"
            style="@style/WrapContent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_common"
            android:textColor="@color/also_on_call_text_color"
            android:textSize="@dimen/text_size"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/also_on_call"
            style="@style/WrapContent"
            android:textColor="@color/also_on_call_text_color"
            android:textSize="@dimen/also_on_call_text_size"
            android:text="@string/also_on_call"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/other_inc_users"
            style="@style/WrapContent"
            android:textColor="@color/other_inc_users_text_color"
            android:textSize="@dimen/other_inc_users_text_size"
            android:layout_marginTop="10dp"
            android:text="User 1, User 2, User 3"
            />

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/background_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >

        <TextView
            android:id="@+id/backgroundText"
            style="@style/MatchWidth"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:textColor="@color/text_opponent_names_out_audio_call"
            android:textSize="@dimen/text_size_call"
            android:textStyle="normal"
            android:layout_marginTop="138dp"
            >
        </TextView>

        <TextView
            style="@style/MatchWidth"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:textColor="@color/call_type_text_color"
            android:textSize="@dimen/text_size_ringing"
            android:textStyle="normal"
            android:text="@string/ringing"
            android:layout_below="@+id/backgroundText"
            android:layout_marginTop="14dp">
        </TextView>

    </RelativeLayout>

    <include
        layout="@layout/element_fragment_video_call"
        />
</RelativeLayout>