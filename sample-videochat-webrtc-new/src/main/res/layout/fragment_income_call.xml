<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id = "@+id/fragmentIncomeCall"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/infoAboutCall"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop = "true">

        <Chronometer
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/grey"
            android:textStyle="bold"
            android:format="@string/incoming_audio_call"
            android:gravity="center_horizontal|center_vertical"
            android:layout_marginTop="46dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/incUserName"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="User 5"
            android:background="@drawable/rectangle_rounded_white_blue"
            android:layout_below="@+id/timer"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical|center_horizontal" />

        <TextView
            android:id="@+id/alsoOnCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/grey"
            android:textStyle="bold"
            android:text="@string/also_on_call"
            android:layout_below="@+id/incUserName"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/otherIncUsers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/grey"
            android:textStyle="bold"
            android:text="User 1, User 2, User 3"
            android:layout_below="@+id/alsoOnCall"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/answeredCall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true">

        <ToggleButton
            android:id="@+id/dynamicToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff=""
            android:textOn=""
            android:background="@drawable/ic_toggle_dynamic"
            android:gravity="center_vertical|center_horizontal"
            android:layout_alignBottom="@+id/handUpBtn"
            android:layout_toLeftOf="@+id/handUpBtn"
            android:layout_marginRight="20dp"
            android:layout_alignTop="@+id/handUpBtn" />

        <ImageButton
            android:id="@+id/handUpBtn"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_call_end"
            android:background="@drawable/btn_background_call_end"
            android:gravity="center_vertical|center_horizontal"
            android:layout_alignParentBottom ="false"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="60dp"
            />


        <ToggleButton
            android:id="@+id/micToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff=""
            android:textOn=""
            android:background="@drawable/ic_toggle_mic"
            android:gravity="center_vertical|center_horizontal"
            android:layout_alignBottom="@+id/handUpBtn"
            android:layout_toRightOf="@+id/handUpBtn"
            android:layout_marginLeft="20dp"
            android:layout_alignTop="@+id/handUpBtn" />

    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/incomingCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:id="@+id/rejectBtn"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_call_end"
            android:background="@drawable/btn_background_call_end"
            android:gravity="center_vertical"
            android:layout_marginStart="40dp"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="60dp"/>

        <ImageButton
            android:id="@+id/takeBtn"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_call"
            android:background="@drawable/btn_background_call_take"
            android:gravity="center_vertical"
            android:layout_marginEnd="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="60dp"/>

    </RelativeLayout>

</RelativeLayout>