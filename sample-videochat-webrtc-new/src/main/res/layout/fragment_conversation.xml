<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id = "@+id/fragmentOpponents"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white">



    <HorizontalScrollView
        android:id="@+id/camerasOpponentsList"
        android:layout_width="fill_parent"
        android:layout_height="130dp"
        android:background="@color/white"
        android:layout_above="@+id/actionButtons"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="7dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/actionButtons"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="7dp"
        android:background="@color/white"
        >

        <ToggleButton
            android:id="@+id/switchCameraToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff=""
            android:textOn=""
            android:background="@drawable/ic_switch_camera"
            android:layout_marginLeft="15dp"
            android:layout_alignTop="@+id/handUpVideoCall"
            android:layout_alignBottom="@+id/handUpVideoCall"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:checked="true"/>

        <ImageButton
            android:id="@+id/handUpVideoCall"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_call_end"
            android:background="@drawable/btn_background_call_end"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/switchCameraToggle"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical" />

        <ToggleButton
            android:id="@+id/dynamicToggleVideoCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff=""
            android:textOn=""
            android:background="@drawable/ic_toggle_dynamic"
            android:layout_toLeftOf="@+id/micToggleVideoCall"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@+id/handUpVideoCall"
            android:layout_alignBottom="@+id/handUpVideoCall"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:checked="true"/>

        <ToggleButton
            android:id="@+id/micToggleVideoCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff=""
            android:textOn=""
            android:background="@drawable/ic_toggle_mic"
            android:gravity="center_vertical|center_horizontal"
            android:layout_alignTop="@+id/handUpVideoCall"
            android:layout_alignBottom="@+id/handUpVideoCall"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:checked="true"/>

    </LinearLayout>

    <com.quickblox.videochat.webrtcnew.view.QBGLVideoView
        android:id="@+id/videoView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/camerasOpponentsList" />


    <TextView
        android:id="@+id/incUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="User Name"
        android:background="@drawable/rectangle_rounded_white_blue"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

</RelativeLayout>