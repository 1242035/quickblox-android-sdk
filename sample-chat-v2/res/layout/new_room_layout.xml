<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="5dp"
              android:orientation="vertical">

    <TextView
        android:id="@+id/rooms_name_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fragment_rooms_namefield"/>

    <EditText
        android:id="@+id/room_name_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10">

        <requestFocus/>
    </EditText>

    <CheckBox
        android:id="@+id/persistent_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="@string/fragment_rooms_checkbox_persistent"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/persistent_text_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="@string/fragment_rooms_persistent_annotation"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <CheckBox
        android:id="@+id/only_members_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="@string/fragment_rooms_checkbox_members"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/only_members_text_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="@string/fragment_rooms_members_annotation"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <Button
        android:id="@+id/room_join_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:minWidth="90dp"
        android:text="@string/fragment_join_button"/>

</LinearLayout>