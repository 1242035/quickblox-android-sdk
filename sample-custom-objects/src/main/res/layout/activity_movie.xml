<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchParent"
    android:paddingLeft="@dimen/padding_large"
    android:paddingRight="@dimen/padding_large">

    <TextView
        android:id="@+id/text_movie_name"
        style="@style/MovieNameStyle"
        android:paddingTop="@dimen/padding_large"
        android:text="@string/title"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_movie_year"
        style="@style/MovieCommentStyle"
        android:layout_below="@+id/text_movie_name"
        android:paddingTop="@dimen/padding_small"
        android:text="@string/year" />

    <TextView
        android:id="@+id/text_movie_description"
        style="@style/MovieDescriptionYearStyle"
        android:layout_below="@+id/text_movie_year"
        android:paddingTop="@dimen/padding_large"
        android:text="@string/description" />

    <TextView
        android:id="@+id/movie_rating_textview"
        style="@style/MovieRatingStyle"
        android:layout_below="@+id/text_movie_description"
        android:text="@string/rating" />

    <RatingBar
        android:id="@+id/rating_movie"
        style="@style/MovieRatingBarStyle"
        android:layout_below="@+id/movie_rating_textview"
        android:isIndicator="true" />

</RelativeLayout>