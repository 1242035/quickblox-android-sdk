<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ListItemStyle" parent="ListItem">
        <item name="android:paddingLeft">@dimen/padding_large</item>
        <item name="android:paddingRight">@dimen/padding_large</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ItemNameStyle" parent="MatchWidth">
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="ItemCommentStyle" parent="MatchWidth">
        <item name="android:textColor">@color/text_color_dark_grey</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="ItemDescriptionYearStyle" parent="MatchWidth">
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textSize">@dimen/text_size_middle</item>
    </style>

    <style name="ItemRatingStyle" parent="WrapContent">
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:paddingTop">@dimen/margin_very_large</item>
    </style>

    <style name="ItemRatingBarStyle" parent="WrapContent">
        <item name="android:paddingTop">@dimen/margin_middle</item>
        <item name="android:numStars">5</item>
    </style>

</resources>