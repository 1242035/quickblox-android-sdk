<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/note_title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_middle"
        android:paddingTop="@dimen/padding_large"
        android:text="@string/note"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/note_edittext"
        android:layout_width="@dimen/node_width"
        android:layout_height="wrap_content"
        android:layout_below="@+id/note_title_textview"
        android:layout_centerHorizontal="true"
        android:background="@drawable/apptheme_edit_text_holo_light"
        android:singleLine="true"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/comments_title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/note_edittext"
        android:paddingLeft="@dimen/padding_middle"
        android:text="@string/comments"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/comments_edittext"
        android:layout_width="@dimen/comments_width"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comments_title_textview"
        android:layout_centerHorizontal="true"
        android:background="@drawable/apptheme_edit_text_holo_light"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="onClick"
        android:text="@string/save"
        android:textColor="@android:color/white" />

</RelativeLayout><!-- From: file:/D:/WorkSpace/Android/git/quickblox-android-sdk/sample-custom-objects/res/layout/activity_add_note.xml -->