<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="horizontal"
    android:padding="10dp">


    <TextView
        android:id="@+id/custom_message_textview_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:alpha="0.5"
        android:paddingLeft="3dp"
        android:gravity="end"
        android:textColor="@color/color_green_qb"
        tools:text="i am custom widget" />

    <LinearLayout
        android:id="@+id/custom_text_message_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5dp"
        android:background="@drawable/shape_circle"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_below="@+id/custom_message_textview_header"
        android:visibility="visible">

        <TextView
            android:id="@+id/message_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:paddingRight="5dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:text="message" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="12dp">

            <TextView
                android:id="@+id/time_text_message_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right|top"
                android:alpha="0.5"
                android:textColor="@color/black"
                tools:text="time" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/custom_message_textview_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:alpha="0.5"
        android:paddingLeft="3dp"
        android:gravity="end"
        android:layout_below="@+id/custom_text_message_view"
        android:textColor="@color/color_green_qb"
        tools:text="i am custom widget" />

</RelativeLayout>