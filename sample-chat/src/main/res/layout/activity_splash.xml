<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="ContentDescription">

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/text_splash_app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/splash_chat_sample"
        android:textColor="@color/text_color_black"
        android:textSize="@dimen/splash_main_text_size"
        app:typeface="roboto_light" />

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/text_splash_app_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_splash_app_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/splash_chat_sample"
        android:textColor="@color/text_color_light_grey"
        android:textSize="@dimen/splash_version_text_size"
        app:typeface="roboto_light" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:src="@drawable/qb_logo"/>

</RelativeLayout>