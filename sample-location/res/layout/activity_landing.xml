<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/background_color"
    tools:context=".activities.LandingActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:contentDescription="drawable" />

    <LinearLayout android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@drawable/orange_line"
        style="@style/ListItem"
        android:padding="8dp"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent">

        <ImageView
            android:layout_marginLeft="36dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mobile_ic"
            android:contentDescription="drawable" />

        <TextView android:text="@string/land_title"
            style="@style/Big.TextView"
            android:layout_width="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <RelativeLayout android:layout_height="wrap_content"
        android:id="@+id/atm_near"
        style="@style/ListItem"
        android:onClick="onItemClick"
        android:layout_width="match_parent">

        <TextView android:text="@string/atm_near"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            style="@style/Big.TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_alignParentRight="true"
            style="@style/SmImageView"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow"
            android:contentDescription="drawable" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/branch_near"
        android:layout_height="wrap_content"
        style="@style/ListItem"
        android:onClick="onItemClick"
        android:layout_width="match_parent">

        <TextView android:text="@string/branch_near"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            style="@style/Big.TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_alignParentRight="true"
            style="@style/SmImageView"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow"
            android:contentDescription="drawable" />


    </RelativeLayout>

    <RelativeLayout style="@style/ListItem"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TextView android:text="@string/atm_branch_addr"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            style="@style/Big.TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_alignParentRight="true"
            style="@style/SmImageView"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow"
            android:contentDescription="drawable" />


    </RelativeLayout>

    <RelativeLayout style="@style/ListItem"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TextView android:text="@string/recently"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            style="@style/Big.TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_alignParentRight="true"
            style="@style/SmImageView"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow"
            android:contentDescription="drawable" />


    </RelativeLayout>

    <ImageView style="@style/ListItem"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:src="@drawable/gray_line"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        />

    <RelativeLayout style="@style/ListItem"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <ImageView
            android:id="@+id/star"
            style="@style/MediumImageView"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/star_ic"
            android:contentDescription="drawable" />

        <TextView android:text="@string/favorite"
            android:layout_toRightOf="@+id/star"
            android:layout_centerVertical="true"
            style="@style/GrayTextView"
            android:layout_width="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_alignParentRight="true"
            style="@style/SmImageView"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow"
            android:contentDescription="drawable" />


    </RelativeLayout>

    <RelativeLayout style="@style/ListItem"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <ImageView
            android:id="@+id/more"
            style="@style/MediumImageView"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/more_ic"
            android:contentDescription="drawable" />

        <TextView android:text="@string/more"
            android:layout_centerVertical="true"
            style="@style/GrayTextView"
            android:layout_toRightOf="@+id/more"
            android:layout_width="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_alignParentRight="true"
            style="@style/SmImageView"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow"
            android:contentDescription="drawable" />


    </RelativeLayout>

</LinearLayout>
