<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/user_avatar2_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:padding="@dimen/padding_small"
        android:src="@drawable/shape_circle" />

    <ImageView
        android:id="@+id/user_avatar_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:paddingLeft="@dimen/padding_middle"
        android:paddingTop="@dimen/padding_large"
        android:src="@drawable/ic_action_timer_auto" />
    <!--android:scaleType="fitCenter"-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_very_large"
        android:layout_marginTop="@dimen/margin_large"
        android:orientation="vertical">

        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/user_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/black_light"
            android:textSize="@dimen/text_size_large"
            app:typeface="roboto_medium"
            tools:text="@string/user" />

        <TextView
            android:id="@+id/full_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:singleLine="true"
            android:textColor="@color/brownish_gray"
            android:textSize="@dimen/text_size_middle"
            tools:text="@string/full_name" />

    </LinearLayout>

</RelativeLayout>