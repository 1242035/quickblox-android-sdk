<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MessageAdapterTextMsgOwnParent.Child">
    </style>

    <style name="MessageAdapterTextMsgOwnParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/chat_babble_margin</item>
        <item name="android:background">@drawable/right_bubble</item>
        <item name="android:padding">@dimen/padding_small</item>
    </style>

    <style name="ItemTextMessageOwnOuterLinear">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="ItemTextMessageOwnWidgetFrame">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AvatarImageViewStyle">
        <item name="android:layout_width">@dimen/image_view_big_avatar_layout_width</item>
        <item name="android:layout_height">@dimen/image_view_big_avatar_layout_height</item>
        <item name="android:layout_gravity">center|top</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/placeholder_user</item>
    </style>

    <style name="CompoundChatTextViewStyle">
        <item name="msgTextColor">#FF0000</item>
        <item name="android:background">#ffffff</item>
        <item name="android:textSize">18sp</item>
        <item name="timeTextColor">#0f92b8</item>

    </style>

</resources>