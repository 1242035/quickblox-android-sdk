<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_frame_right"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/bubble_background"
        style="@style/MessageAdapterTextMsgParent.Own"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/outer_message_textview_right"
            style="@style/LinearTextMessage.Own"
            android:orientation="vertical">

            <TextView
                android:id="@+id/time_text_message_textview"
                style="@style/ItemStubTimeText.Own"
                android:layout_gravity="right"
                tools:text="current time August" />

            <TextView
                android:id="@+id/message_textview"
                style="@style/ItemStubMsgText.Own"
                android:paddingBottom="5dp"
                android:paddingRight="5dp"
                tools:text="messagertdfsscsd messagertdfsscsd" />

            <!--LinearLayout should place its actual message widget here.-->
            <LinearLayout
                android:id="@+id/widget_frame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="vertical" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/avatar_imageview_right"
        style="@style/AvatarImageViewStyle.Own"/>

</LinearLayout>