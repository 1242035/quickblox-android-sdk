<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_frame_left"
    style="@style/MainItemStubMsgText.Left">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar_imageview"
        style="@style/AvatarImageViewStyle.Left"/>

    <LinearLayout
        android:id="@+id/bubble_background"
        style="@style/MessageAdapterTextMsg.Left">


        <LinearLayout
            android:id="@+id/outer_message_textview_left"
            style="@style/LinearTextMessage.Left">

            <TextView
                android:id="@+id/time_text_message_textview"
                style="@style/ItemStubTimeText.Left"
                tools:text="August 16" />

            <TextView
                android:id="@+id/message_textview"
                style="@style/ItemStubMsgText.Left"
                tools:text="messagertdfsscsd" />

            <!--LinearLayout should place its actual message widget here.-->
            <LinearLayout
                android:id="@+id/widget_frame"
                style="@style/ItemStubWidgetFrame.Left" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>
