<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    android:padding="10dp">

    <!--<RelativeLayout
        android:id="@+id/text_message_view"
        style="@style/MessageAdapterTextMsgOwnParent.Child">
-->

    <LinearLayout
        android:id="@+id/outer_message_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/right_bubble"
        android:orientation="horizontal"
        android:layout_gravity="right">
        <!--android:layout_below="@+id/widget_frame">-->

        <TextView
            android:id="@+id/message_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:textColor="@color/qb_text_own_color"
            android:textSize="@dimen/qb_text_size"
            tools:text="message" />

        <LinearLayout
            android:id="@+id/inner_message_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="5dp">

            <TextView
                android:id="@+id/time_text_message_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right|top"
                android:alpha="0.5"
                android:textColor="@color/white"
                tools:text="time" />

            <ImageView
                android:id="@+id/text_message_delivery_status_imageview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:paddingLeft="5dp"
                android:scaleType="fitCenter" />

        </LinearLayout>

    </LinearLayout>

