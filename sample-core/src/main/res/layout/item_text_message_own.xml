<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    android:padding="@dimen/padding_medium">

    <LinearLayout
        android:id="@+id/text_message_view"
        style="@style/MessageAdapterTextMsgOwnParent.Child"
        android:orientation="vertical"
        android:layout_gravity="right">

        <LinearLayout
            android:id="@+id/outer_message_textview"
            style="@style/ItemTextMessageOwnOuterLinear">

            <TextView
                android:id="@+id/message_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_marginTop="8dp"
                android:textColor="@color/qb_text_own_color"
                android:textSize="@dimen/qb_text_size"
                tools:text="messagertdfgdfgdgfdfgdghfdfgdfgdfgdfdfgdfgdfdfgdfgdfgdfgdfgdfg" />

            <TextView
                android:id="@+id/time_text_message_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right|top"
                android:alpha="0.5"
                android:layout_margin="4dp"
                android:textColor="@color/white"
                tools:text="August 16" />

            </LinearLayout>

    </LinearLayout>

</LinearLayout>